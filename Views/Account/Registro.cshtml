@model List<LoginArtesanos.Models.Roles>


@{
    ViewBag.Title = "Registrarse para usar la aplicacion";
}

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h2>Registro</h2>
            <hr />
            <form action="/Account/Registro" method="post">

                @if (Session["Error"] != null)
                {
                    <div class="alert alert-danger" role="alert" style="margin-top: 5px;">
                        @Session["Error"]
                    </div>
                }

                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="Nombre" placeholder="Ingresa tu nombre" autofocus required>
                </div>

                <div class="form-group">
                    <label>Apellido</label>
                    <input type="text" class="form-control" name="Apellido" placeholder="Ingresa tu apellido" required>
                </div>

                <div class="form-group">
                    <label>Tipo Docuemnto</label>
                    <SELECT NAME="TipoDocumento" class="form-control" required>
                        <OPTION VALUE="C">Cédula</OPTION>
                        <OPTION VALUE="E">Extranjero</OPTION>
                        <OPTION VALUE="R">Ruc</OPTION>
                    </SELECT>
                </div>

                <div class="form-group">
                    <label>Número Documento</label>
                    <input required type="text" class="form-control" name="NumeroDocumento" placeholder="Ingresa tu número de documento" />
                </div>

                <div class="form-group">
                    <label>Correo Electrónico</label>
                    <input required type="email" class="form-control" name="Correo" placeholder="Ingresa tu correo electrónico" />
                </div>

                <div class="form-group">
                    <label>Nombre De Usuario</label>
                    <input required type="text" class="form-control" name="Usuario" placeholder="Ingresa tu nombre de usuario" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input required type="password" class="form-control" name="Password" placeholder="Ingresa tu password" />
                </div>

                <div class="form-group">
                    <label>Confirmar Password</label>
                    <input required type="password" class="form-control" name="PasswordConfirm" placeholder="Confirma tu password" />
                </div>

                <div class="form-group">
                    <label>Tipo De Usuario</label>
                    <select name="cmbTipoUsuario" class="form-control" required>

                        @foreach (var item in Model)
                        {
                            <option>@item.Nombre</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary"><i class="fa fa-user-plus"></i> Registrarse</button>
                </div>
                <div class="form-group">
                    @Html.ActionLink("Iniciar Sesion", "Index", "Home")
                </div>

            </form>
        </div>
    </div>
