@model LoginArtesanos.Models.MainModel

@{
    ViewBag.Title = "Index";
}

<h2>Listado De Productos</h2>

<p>
    <a href="@Url.Action("AgregarProducto", "Artesano")">Agregar Producto</a>
</p>
<hr />
<h4>Mis productos</h4>

@if (Model.Productos.Any() && Model.Productos.Count > 0)
{
<div class="row">
    @foreach (var producto in Model.Productos.OrderByDescending(x => x.IdProducto)) {
    <div class="col-sm-2 col-xs-4">
        <div class="thumbnail">
            <img src="@string.Format($"/Upload/{producto.Foto}")" class="img-responsive img-thumbnail" alt="@producto.Nombre">
            <div class="caption">
                <h4>@producto.Nombre</h4>
                <p>
                    <a href="javascript:void(0)" class="">Precio: @string.Format("{0:C}", @producto.Precio)</a>|
                    <a href="javascript:void(0)" class="">Stock: @producto.Stock</a>|
                    <a href="javascript:void(0)" class="">Peso: @producto.Peso</a>
                </p>
                <p>
                    <a href="@Url.Action("EliminarProducto", "Artesano", new { Id = producto.IdProducto, IdUsuario = producto.IdUsuario})" onclick="return confirm('Se procedera a eliminar el producto. Deseas continuar?')" class="" role="button">Eliminar</a> |
                    <a href="@Url.Action("EditarProducto", "Artesano", new { Id = producto.IdProducto})" class="" role="button">Editar</a>
                </p>
            </div>
        </div>
    </div>
    }
</div>
}
else
{
<div class="text-center">
    <i class="fa fa-ban fa-4x"></i>
    <br />
    <br />
    No se han encontrado productos
</div>
}
