@model LoginArtesanos.Models.MainModel

@{
    ViewBag.Title = "Ver Producto";
}

<!-- products -->
<div class="products" style="margin-top: 40px;">
    <div class="container">
        <div class="single-page">
            <div class="single-page-row" id="detail-21">
                <div class="col-md-5 col-md-offset-1 single-top-left">
                    <div class="flexslider">
                        <ul class="slides">
                            <li data-thumb="images/s1.jpg">
                                <div class=""><img src="@string.Format($"/Upload/{Model.Producto.Foto}")" class="img-responsive img-thumbnail"> </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4 single-top-right">
                    <h3 class="item_name">@Model.Producto.Nombre</h3>
                    <div class="single-rating">
                        <ul>
                            <li>Precio: @string.Format("{0:C}", @Model.Producto.Precio)</li>
                            <li>Peso: @Model.Producto.Peso</li>
                            <li>Stock: @Model.Producto.Stock</li>
                        </ul>
                    </div>
                    <a href="javascript:void(0)" class="btn btn-primary"><i class="fa fa-cart-plus" aria-hidden="true"></i> Comprar</a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-default"><i class="fa fa-arrow-left" aria-hidden="true"></i> Volver</a>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>
<!--//products-->
